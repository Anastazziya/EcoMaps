<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <LinearLayout
        android:id="@+id/textsplash"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Eco map"
            android:textColor="#FFF"
            android:textSize="50dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="201dp"
            android:layout_height="57dp"
            android:text="    Transhistriya"
            android:textColor="#FFF"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/texthome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:elevation="6dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Explore"
            android:textColor="#FFF"
            android:textSize="39dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="201dp"
            android:layout_height="57dp"
            android:text="Just sort"
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:elevation="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/book" />

                <Button
                    android:id="@+id/buttonEcoDirectory"
                    android:layout_width="99dp"
                    android:layout_height="37dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/transparent"
                    android:text="Справочник \ маркеровок"
                    android:textColor="#0E1843"
                    android:textSize="12dp"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/earth" />
                <Button
                    android:id="@+id/buttonShowMap"
                    android:layout_width="99dp"
                    android:layout_height="37dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/transparent"
                    android:text="Показать \ карту"
                    android:textColor="#0E1843"
                    android:textSize="12dp"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/world" />
                <Button
                    android:id="@+id/buttonNews"
                    android:layout_width="99dp"
                    android:layout_height="37dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/transparent"
                    android:text="Статьи"
                    android:textColor="#0E1843"
                    android:textSize="12dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/face" />
                <Button
                    android:id="@+id/buttonProgramm"
                    android:layout_width="99dp"
                    android:layout_height="37dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/transparent"
                    android:text="О программе"
                    android:textColor="#0E1843"
                    android:textSize="12dp"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="526dp"
        android:layout_height="900dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bgapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clover"
        android:layout_width="323dp"
        android:layout_height="198dp"
        android:layout_marginEnd="180dp"
        android:elevation="6dp"
        android:src="@mipmap/clover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>